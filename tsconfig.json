{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "declaration": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "@abi/*": ["abi/*"],
      "@generated/*": ["generated/*"],
      "@model/*": ["model/*"],
      "@notify/*": ["notify/*"],
      "@processors/*": ["processors/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src", "scripts"],
  "exclude": ["node_modules", "lib"]
}
